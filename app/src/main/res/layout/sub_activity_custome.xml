<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subLayOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_77sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/roundedback"

        >




        <TextView
            android:id="@+id/sub_activityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:text="squats"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/sub_activityTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sub_activityText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="0:15 "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sub_activityText"
           app:layout_constraintLeft_toRightOf="@+id/sub_activityTime"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="milli second"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"

            />

        <ImageView
            android:id="@+id/deleteActivity"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_delete_24"
           android:layout_marginTop="@dimen/_35sdp"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>